---
import LinkedinIcon from "../icons/Linkedin.astro";
import GithubIcon from "../icons/Github.astro";
import SocialLinks from "../components/SocialLinks.astro";
---

<section class="relative mt-12 lg:mt-14 h-[400px] md:h-[600px] lg:h-[600px]">
  <div class="absolute w-full h-full">
    <div class="flex flex-col items-center justify-center h-full">
      <h2
        class="font-bold text-4xl pb-9 lg:border-b-2 lg:border-black md:border-b-2 md:border-black uppercase text-center">
        Bienvenido a mi portafolio
      </h2>
      <ul class="flex gap-x-3 m-4">
        <SocialLinks
          class="size-11 bg-black rounded-full flex items-center justify-center hover:scale-110"
          href="https://www.linkedin.com/in/jhordy-roldan-flores-810056225/">
          <LinkedinIcon class="size-6 text-white" />
        </SocialLinks>
        <SocialLinks
          class="size-11 bg-black rounded-full flex items-center justify-center hover:scale-110"
          href="https://github.com/jxdflores25">
          <GithubIcon class="size-8 text-white" />
        </SocialLinks>
      </ul>
      <p
        class="w-[250px] sm:w-[350px] lg:w-[450px] md:w-[450px] text-pretty text-center text-xl">
        Soy un estudiante de ingeniería de sistemas al que le apasiona el mundo
        del análisis y visualización de datos
      </p>
    </div>
  </div>
  <div class="absolute -z-10 opacity-50 w-full">
    <picture>
      <img
        src="/FondoPortada.jpg"
        alt="Fondo de portada"
        class="w-full h-[400px] lg:h-[600px] md:h-[600px]"
      />
    </picture>
  </div>
</section>
